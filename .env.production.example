# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
PORT=:50051

# JWT Configuration - Use strong random secret!
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=15m
JWT_ISSUER=GoAuth

# MongoDB Configuration
# For production, use authenticated MongoDB with SSL
MONGODB_URI=mongodb://username:password@mongodb:27017/auth?authSource=admin

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-production-client-id.apps.googleusercontent.com

# Optional: Logging
LOG_LEVEL=info
